<h3>All Companies</h3>

<% @companies.each do |company| %>
  <div class=company_<%= company.id %>>
    <b><%= link_to company.name, company_path(company) %></b><br>
    <%= link_to "Edit", edit_company_path(company) %>
    <%= link_to "Delete", company_path(company), method: "delete" %>
  </div>
<% end %>
