<div class='page-header'>
  <div class='btn-toolbar pull-right'>
    <%= link_to "Return to jobs at #{@company.name}", company_jobs_path(@company, @jobs), class: "btn btn-default" %>

    <%= link_to "Edit", edit_company_job_path(@company, @job), class: "btn btn-default" %>

    <%= link_to "Delete", company_job_path(@company, @job), method: "delete", class: "btn btn-default"%>

  </div>
  <h2><%= @job.title %> at <%= @company.name %></h2>
</div>

<div class="col-md-12">
<div class="list-group">
  <ul class="col-md-8">
    <li class="list-group-item"> Description: <strong> <%= @job.description %> </strong> </li>
    <li class="list-group-item"> Level of Interest: <strong> <%= @job.level_of_interest %> </strong> </li>
    <li class="list-group-item"> City: <strong> <%= @job.city %> </strong> </li>
    <% if @job.category %>
    <li class="list-group-item"> Category: <strong/> <%= link_to "#{@job.category.title}", category_path(@job.category)%></li>
    <% end %>
  </ul>
</div>
</div>

<div class="col-md-12 tags">
  <h4>Tags</h4>
  <% @tags.each do |tag| %>
    <p style="color: #d88400;"> <%= tag.title %></p>
  <% end %>
  <%= link_to "add a new tag to this job", edit_company_job_path(@company, @job) %><br><br>
</div>


<div class="col-md-12 comments">
  <h4> Comments</h4>
  <% @comments.each do |comment| %>
     <p class="comment"> <%= comment.updated_at.month %>/<%= comment.updated_at.day %>: <%= comment.content %></p> <br><br>
  <% end %>
</div>

<span class="col-md-12 comment-form">
  <%= render partial: "comments/form" %>
</span>
