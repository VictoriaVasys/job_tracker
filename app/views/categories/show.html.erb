<div class='page-header'>
  <h3><%= @category.title %></h3>
</div>

<div class="list-group">
  <ul class="col-md-8">
    <% @category.jobs.each do |job| %>
      <li class="list-group-item"><%= link_to "#{job.title} at #{job.company.name}", company_job_path(job.company, job) %></li>
    <% end %>
  </ul>
</div>

<span class="col-md-12">
  <div class="btn btn-default" role="button" >
    <%= link_to "Return to all categories", categories_path, class: "btn-sm, btn-default" %>
  </div>
</span>


